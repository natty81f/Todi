<%= render partial: "layouts/header" %>

<section>
	<div class="form-area">	
		<div class="small-6 columns">
			<div class="sign"><h2>REGISTER</h2></div>	
		</div>

		<%= form_for @registrant, url: register_path, method: :post do |f| %>

		<div class="large-12 columns">
		<%= f.text_field :email,  placeholder: "Your Email" %>
		</div>

		<div class="small-12 columns">
		<%= f.submit "SEND CONFIRMATION", class: "button expand" %>
		<div>
	
		<% end %>

	</div>	
</section>		