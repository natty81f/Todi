<%= render partial: "layouts/header" %>

<section>
	<div class="form-area">	
			<div class="large-12 columns">
				<div class="sign"><h2>COMPLETE REGISTRATION</h2></div>
			</div>	

			<%= form_for @user, url: registration_complete_path, method: :put do |f| %>
				<div class="large-12 columns">
				<%= f.text_field :email , placeholder: @user.email %>
				</div>

				<div class="large-12 columns">
				<%= f.password_field :password, placeholder: "Password" %>
				</div>

				<div class="large-12 columns">
				<%= f.password_field :password_confirmation, placeholder: "Password Confirmation" %>
				</div>

				<div class="large-12 columns">
				<%= f.text_field 		:username, placeholder: "Username" %>
				</div>
				
				<div class="large-12 columns">
				<%= f.text_field 		:name, placeholder: "Full Name" %>
				</div>

				<div class="large-12 columns">
				<%= f.submit "Complete Registration", class: "button" %>
				</div>
					
			<% end %>

	</div>	
</section>			