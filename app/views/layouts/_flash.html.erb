<% flash.each do |name, message| %>
  <% if message.is_a?(String) %>
    <% noty_type = (name == :notice ? "success" : "error") %>
    <% timeout = (name == :notice ? 4000 : 30000) %>
    <script type="text/javascript">
      $(function() {
        noty({
          type: "<%= noty_type %>",
          text: "<%= message %>",
          timeout: "<%= timeout %>"
        });
      });
    </script>
  <% end %>
<% end %>
